{
    "name": "dbmng/dbmng",
    "description": "A simple boilerplate for my PHP projects.",
    "license": "MIT",
    "authors": [
        {
            "name": "Diego Guidotti",
            "email": "guidotti@aedit.it"
        },
				{
            "name": "Michele Mammini",
            "email": "mamminim@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.3.3"
    },
    "require-dev": {
        "mockery/mockery": "~0.9",
        "phpunit/phpunit": "~4.1",
        "phpunit/dbunit": "1.2.*",
				"respect/rest": "0.6.*",
				"guzzlehttp/guzzle": "~6.0",
        "gargron/fileupload": "~1.4.0"
    },
    "autoload": {
        "psr-4": {
            "Dbmng\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dbmng\\Tests\\": "tests/"
        }
    },
    "config": {
        "bin-dir": "bin/"
    }
}
